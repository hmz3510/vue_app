t\t\t\t\t<div class=\"mui-media-body\">\r\n\t\t\t\t\t\t\t{{item.title}}\r\n\t\t\t\t\t\t\t<p class='mui-ellipsis'>\r\n                                <span>{{item.ctime|dataFilter}}</span>\r\n                                 <span>点击:{{item.point}}次</span>\r\n                            </p>         \r\n\t\t\t\t\t\t</div>\r\n\t\t\t\t\t</router-link>\r\n\t\t\t\t</li>\t\t\r\n\t\t</ul>\r\n        <mt-button type=\"primary\" size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n    </div>\r\n\r\n\r\n\r\n</template>\r\n\r\n\r\n<script>\r\n    export default {\r\n        data(){\r\n            return {\r\n                list:[],\r\n                pageIndex:0, //显示当前的页数\r\n                pageSize:5,  //页数大小\r\n                hasMore:true,\r\n                pageCount:2\r\n            }\r\n        },\r\n        methods:{\r\n            //加载更多\r\n            getMore(){   \r\n                this.pageIndex++;\r\n                //判断是否还有下一页\r\n                this.hasMore = this.pageIndex<=this.pageCount;\r\n                //如果没有更多 停止\r\n                if(!this.hasMore) {return};\r\n                this.$http.get(\"http://localhost:3000/newslist?pno=\"+this.pageIndex+\"&pageSize=\"+this.pageSize).then(result=>{\r\n                    console.log(result);\r\n                    var rows = this.list.concat(result.body.data);\r\n                    this.list = rows\r\n                   // this.list=result.body.data;\r\n                   this.pageCount=result.body.pageCount;\r\n                })\r\n            }\r\n        },\r\n        created(){\r\n            this.getMore()\r\n        }\r\n    }\r\n</script>\r\n\r\n<style scoped>\r\n    .app-newslist .mui-table-view li .mui-ellipsis{\r\n        display:flex;\r\n        font-size:12px;\r\n        color:#226aff;\r\n        justify-content:space-between;\r\n    }\r\n</style>"]}]}