         postComment(){\r\n               //获取新闻编号和评论内容 //判断是否为空 之后发送post请求  然后获取服务器程序返回 之后提醒客户是否评论成功\r\n                var comment =this.comment; //获取内容\r\n                var nid =this.id;\r\n                //console.log(nid);\r\n                //console.log(comment);\r\n                if(comment.trim().length==0){\r\n                    Toast(\"留言不能为空\")\r\n                    return;\r\n                }else{     \r\n                    this.$http.post(\"http://localhost:3000/postcomment\",\r\n                        {comment:comment,nid:nid}).then(result=>{\r\n                        //console.log(result);\r\n                            Toast(\"发表成功\")\r\n                            this.pageIndex=0; //重新设置当前页数为0\r\n                            this.list=[];       //重新设置list为空数组\r\n                            this.getMore(); //成功后立即调用\r\n                        \r\n                    })\r\n                }\r\n           }\r\n       },\r\n       created(){\r\n           this.getMore()\r\n       }\r\n    }\r\n",{"version":3,"sources":["comment.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;AAsBA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"comment.vue","sourceRoot":"src\\components\\sub","sourcesContent":["<!--评论子组件-->\r\n<template>\r\n    <div class=\"app-comment\">\r\n        <h4>发表评论</h4>\r\n        <hr/>\r\n        <textarea placeholder=\"请吐槽最多120字\" maxlength=\"120\" v-model=\"comment\"></textarea>\r\n        <mt-button type=\"primary\" size=\"large\" @click=\"postComment\">发表评论</mt-button>\r\n        <!--显示评论区域-->\r\n        <div class=\"cmt-list\">\r\n            <div class=\"cmt-item\" v-for=\"(item,i) in list\" :key=\"item.id\">\r\n                <div class=\"cmt-info\" >第{{i+1}}楼:{{item.user_name}}\r\n                发表时间:{{item.ctime|dataFilter}}\r\n                </div>\r\n                <div class=\"cmt-body\">\r\n                   {{item.content}}\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <mt-button type=\"primary\" size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n    </div>\r\n</template>\r\n<script>\r\n//单独引入Toast组件\r\nimport {Toast} from \"mint-ui\"\r\n    export default {\r\n        data(){\r\n            return{\r\n                comment:'',\r\n                pageIndex:0,//当前页码\r\n                pageSize:5, //页大小\r\n                pageCount:1,\r\n                list:[],\r\n                hasMore:true\r\n            }\r\n        },\r\n        props:[\"id\"],\r\n       methods:{\r\n           getMore(){\r\n               this.pageIndex++;\r\n                this.hasMore=this.pageIndex<=this.pageCount;\r\n                if(!this.hasMore) return;\r\n               //console.log(this.id);\r\n               this.$http.get(\"getComment?id=\"+this.id+\"&pno=\"+this.pageIndex+\"&pageSize=\"+this.pageSize).then(result=>{\r\n                   console.log(result);\r\n                   this.list = this.list.concat(result.body.data); //拼接数组\r\n                   this.pageCount = result.body.pageCount;\r\n                   \r\n               })\r\n           },\r\n           postComment(){\r\n               //获取新闻编号和评论内容 //判断是否为空 之后发送post请求  然后获取服务器程序返回 之后提醒客户是否评论成功\r\n                var comment =this.comment; //获取内容\r\n                var nid =this.id;\r\n                //console.log(nid);\r\n                //console.log(comment);\r\n                if(comment.trim().length==0){\r\n                    Toast(\"留言不能为空\")\r\n                    return;\r\n                }else{     \r\n                    this.$http.post(\"http://localhost:3000/postcomment\",\r\n                        {comment:comment,nid:nid}).then(result=>{\r\n                        //console.log(result);\r\n                            Toast(\"发表成功\")\r\n                            this.pageIndex=0; //重新设置当前页数为0\r\n                            this.list=[];       //重新设置list为空数组\r\n                            this.getMore(); //成功后立即调用\r\n                        \r\n                    })\r\n                }\r\n           }\r\n       },\r\n       created(){\r\n           this.getMore()\r\n       }\r\n    }\r\n</script>\r\n<style scoped>\r\n    .app-comment textarea{\r\n        font-size:14px;\r\n        height:85px;\r\n        margin:0;\r\n    }\r\n    .app-comment .cmt-list {\r\n        margin: 5px 0px;\r\n        \r\n    }\r\n    .app-comment .cmt-list .cmt-info{\r\n        line-height:30px;\r\n        background:#ccc;\r\n    }\r\n    .app-comment .cmt-list .cmt-body{\r\n        margin:10px 0;\r\n        text-indent:2em;\r\n    }\r\n</style>\r\n"]}]}